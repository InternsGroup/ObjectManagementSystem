
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link href="~/Content/Statistics/css/style.css" rel="stylesheet" />
<link href="~/Content/Statistics/css/bootstrap.css" rel="stylesheet" />
<link href="~/Content/Statistics/css/clndr.css" rel="stylesheet" />
<link href="~/Content/Statistics/css/jqvmap.css" rel="stylesheet" />
<link href="~/Content/Statistics/css/nav.css" rel="stylesheet" />
<script src="~/Content/Statistics/js/Chart1.js"></script>

<head>
    <title>Statistics</title>
</head>

<h2 style="margin-top:10px">Statistics</h2>

<div class="list_of_members">

    <div class="new-users">
        <div class="icon">
            <i class="user1"></i>
        </div>
        <div class="icon-text">
            <h3>@ViewBag.userNum</h3>
            <p>Number of Users</p>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="orders">
        <div class="icon">
            <i class="order"></i>
        </div>
        <div class="icon-text">
            <h3>@ViewBag.objectNum</h3>
            <p>Number of Objects</p>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="visitors">
        <div class="icon">
            <i class="visit"></i>
        </div>
        <div class="icon-text">
            <h3>@ViewBag.loanedObjectNum</h3>
            <p>Loaned Objects</p>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
</div>

<div class="total-sales">
    <div class="user-trends">
        <div class="alert-close7"> </div>

        <canvas id="bar" height="340" width="780"></canvas>
        <script>

            var barChartData = {
                labels: ["January", "February", "March", "April", "May", "June", "July"],
                datasets: [
                    {
                        fillColor: "rgba(255, 137, 167, 0.78)",
                        strokeColor: "rgba(220,220,220,1)",
                        data: [65, 59, 90, 81, 56, 55, 40]
                    },
                    {
                        fillColor: "rgba(140, 145, 255, 0.69)",
                        strokeColor: "rgba(151,187,205,1)",
                        data: [28, 48, 40, 19, 96, 27, 100]
                    }
                ]

            }

            var myLine = new Chart(document.getElementById("bar").getContext("2d")).Bar(barChartData);

        </script>
    </div>

    <div class="clearfix"></div>
</div>

